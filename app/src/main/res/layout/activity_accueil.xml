<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".activités.Accueil">


    <Button
        android:id="@+id/btn_sign_out"
        android:layout_width="87dp"
        android:layout_height="44dp"
        android:background="@drawable/btn_perso"
        android:text="Déconnexion"
        android:textColor="#FFFF"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.018"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.028" />

    <Button
        android:id="@+id/btn_liste_alarm"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_marginTop="148dp"
        android:background="@drawable/btn_perso"
        android:text="Mes alarmes"
        android:textColor="#FFFF"
        android:layout_marginBottom="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_profil"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:background="@drawable/btn_perso"
        android:text="Mon profil"
        android:textColor="#FFFF"
        android:layout_marginBottom="44dp"
        android:layout_marginTop="44dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_amis"
        app:layout_constraintVertical_bias="0.414" />

    <Button
        android:id="@+id/btn_amis"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/btn_perso"
        android:text="Mes amis"
        android:textColor="#FFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_liste_alarm" />

</androidx.constraintlayout.widget.ConstraintLayout>